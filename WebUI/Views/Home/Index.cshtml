@model WebUI.Models.RentalInfo

@{
    ViewData["Title"] = "Araç Kiralama";
}

<h2>Araç Kiralama</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PickupLocation" class="control-label">Nereden Alacaksınız?</label>
        <select asp-for="PickupLocation" class="form-control">
            <option value="İstanbul Airport">İstanbul Airport</option>
            <option value="İstanbul Sabıha Gökçen Airport">İstanbul Sabıha Gökçen Airport</option>
            <option value="İstanbul Üsküdar">İstanbul Üsküdar</option>
            <option value="Ankara Esenboğa Airport">Ankara Esenboğa Airport</option>
            <option value="Ankara Şehir Merkezi">Ankara Şehir Merkezi</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PickupDate" class="control-label">Alış Tarihi</label>
        <input asp-for="PickupDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ReturnDate" class="control-label">Bırakma Tarihi</label>
        <input asp-for="ReturnDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DriverAge" class="control-label">Sürücü Yaşı</label>
        <select asp-for="DriverAge" class="form-control">
            <option value="18-21">18-21</option>
            <option value="22-25">22-25</option>
            <option value="25-29">25-29</option>
            <option value="30+">30+</option>
        </select>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-secondary">Farklı Yerde Bırakmak İstiyorum</button>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-secondary">Promosyon Kullan</button>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">En Uygun Araba</button>
    </div>
</form>
