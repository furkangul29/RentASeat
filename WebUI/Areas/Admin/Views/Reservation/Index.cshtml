@model List<ResultReservationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Rezervasyon Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Rezervasyonlar ile ilgili onaylama işlemlerini bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adı</th>
                                        <th>Soyadı</th>
                                        <th>Mail Adresi</th>
                                        <th>Telefon</th>
                                        <th>Alacağı Lokasyon</th>
                                        <th>Bırakacağı Lokasyon</th>
                                        <th>Alınacak Araç</th>
                                        <th>Sürücü Yaşı</th>
                                        <th>Ehliyet Yılı</th>
                                        <th>Açıklama</th>
                                        <th>Durum</th>
                                        <th>Onayla</th>
                                        <th>Reddet</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Surname</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.PickUpLocationName</td>
                                            <td>@item.DropOffLocationName</td>
                                            <td>@item.CarName</td>
                                            <td>@item.Age</td>
                                            <td>@item.DriverLicenseYear</td>
                                            <td>@item.Description</td>
                                            <td>@item.Status</td>
                                            <td><a href="/Admin/Reservation/ConfirmReservation/@item.ReservationID" class="btn btn-outline-success">Onayla</a></td>
                                            <td><a href="/Admin/Reservation/RejectReservation/@item.ReservationID" class="btn btn-outline-dark">Reddet</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
